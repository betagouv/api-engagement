{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2021",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "strict": true,
    "typeRoots": ["../node_modules/@types", "../types"],
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["*"]
    },
    "esModuleInterop": true
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
