[sqlfluff]
dialect = postgres
indent_unit = space

[sqlfluff:templater]
templater = jinja

[sqlfluff:templater:jinja]
load_macros_from_path = macros

[sqlfluff:indentation]
tab_space_size = 2

[sqlfluff:layout:type:comma]
spacing_before = touch
line_position = trailing

[sqlfluff:rules:references.keywords]
ignore_words = type
